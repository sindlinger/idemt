{
  "name": "mt5ide",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:electron\"",
    "dev:renderer": "vite --port 5173",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:preload": "tsc -w -p tsconfig.preload.json",
    "dev:electron": "cross-env-shell \"NODE_ENV=development wait-on tcp:5173 dist/main/main.js dist/preload/index.js && electron .\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "typecheck": "tsc -p tsconfig.renderer.json --noEmit && tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.preload.json --noEmit"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "chokidar": "^3.5.3",
    "diff": "^5.2.0",
    "monaco-editor": "^0.50.0",
    "node-pty": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xterm": "^5.5.0",
    "xterm-addon-fit": "^0.8.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@types/diff": "^5.2.0",
    "@types/node": "^20.12.12",
    "@types/node-pty": "^0.10.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "wait-on": "^7.2.0"
  }
}
